<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File List</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script>
        function confirmDelete(filename) {
            if (confirm('Are you sure you want to delete ' + filename + '?')) {
                window.location.href = '/delete/' + filename;
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <header>
            <h1><i class="fas fa-book"></i> Khataa Book</h1>
            <a class="create-btn" href="/create">
                <i class="fas fa-plus-circle"></i> Create New File
            </a>
        </header>

        <section class="file-list">
            <% if (files.length > 0) { %>
                <% files.forEach((file) => { %>
                    <div class="file-item">
                        <h2><i class="fas fa-file-alt"></i> <%= file %></h2>
                        <div class="actions">
                            <a href="/edit/<%= file %>" class="edit-btn">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button class="delete-btn" onclick="confirmDelete('<%= file %>')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No files available</p>
            <% } %>
        </section>
    </div>
</body>
</html>
